{
    "path": {
        "root": {
            "web": "",
            "server": "."
        },
        "static": {
            "root": "{path.root.web}",
            "skin": "{path.static.root}/templates/skin/{view.skin}"
        },
        "uploads": {
            "root": "/uploads",
            "images": "/img"
        },
        "offset_request_url": 0,
        "smarty": {
            "template": "{path.root.server}/templates/skin/{view.skin}",
            "compiled": "{path.root.server}/templates/compiled",
            "cache":    "{path.root.server}/templates/cache",
            "plug":     "{path.root.server}/include/plugs"
        }
    },
    "static_web": "//static.lunavod.ru/",
    "static_inner": "//static.lunavod.ru/",
    "static_server": "/var/www/static"
}
